<% include header %>
<section class="center">
  <div class="topbar">
    <h2>Delete Transaction</h2>
  </div>
</section>
<section class="center" class="mainbody">
  <table class="ledger-table">
    <thead>
			<tr>
				<th>Date</th>
        <th>Description</th>
        <th>Category</th>
        <th class="amount-align">Withdrawal</th>
        <th class="amount-align">Deposit</th>
        <th>&nbsp;</th>
        <th>&nbsp;</th>
        <th>&nbsp;</th>
			</tr>
		</thead>
		<tbody>
      <tr>
        <td><%= transaction.date %></td>
        <td><%= transaction.desc %></td>
        <td><%= transaction.type %></td>
        <td class="amount-align"><%= transaction.amount %></td>
        <td class="amount-align"><%= transaction.amount %></td>
        <td class="amount-align"></td>
      </tr>
    </tbody>
  </table>
  <div class="float-right">
    <form role="form" action="/transactions/delete" method="post">
      <input type="hidden" name="_id" value="<%= transaction._id%>" />
      <input name="submit" type="submit" value="Delete" class="cta-red" />
      <a href="../../transactions"><button type="button" class="cta-grey">Cancel</button></a>
    </form>
  </div>
</section>
<% include footer %>