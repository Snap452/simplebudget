<% include header %>
<% if (goal) { %>
<section class="center">
  <div class="topbar">
    <h2>Update Goal</h2>
  </div>
</section>
<% } else { %>
<section class="center">
  <div class="topbar">
    <h2>Create Goal</h2>
  </div>
</section>
<% } %>
<section class="center" class="mainbody">
	<div class="container-fluid">
		<div class="row">
			<div class="col-4">
			  <form role="form" action="/goals/save" method="post">
			    <label for="goal_name">Goal Name:</label><input <%- general_helper.FormValue(goal.goal_name) %> type="text" name="goal_name" class="form-control mb-3" />
			    <label for="goal_target">Target Amount:</label><input <%- general_helper.FormValue(goal.goal_target) %> type="number" step="0.01" name="goal_target" placeholder="0.00" class="form-control mb-3" />
			    <label for="goal_length">Target Date:</label><input <%- general_helper.FormValue(date_helper.FormatFormDate(goal.goal_length)) %> type="date" name="goal_length" class="form-control mb-3" />
			    <button type="submit" name="submit" class="cta mr-2"><%= (goal) ? 'Update' : 'Create' %> Goal</button>
          <a href="../"><button type="button" class="cta-grey">Cancel</button></a>
			  </form>
			</div>
		</div>
	</div>
</section>
<% include footer %>