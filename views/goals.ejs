<% if (goals.length === 0) { %>
<section class="center" class="mainbody">
  <div class="topbar">
        <h5 class="mb-3">You have not yet created a goal.</h5>
        <a href="/goals/add" class="cta">Create Goal</a>
  </div>
</section>
<% } else { %>
<section class="center" class="mainbody">
  <div class="topbar"></div>
  <table class="ledger-table">
    <thead>
			<tr>
				<th>Goal</th>
        <th>Target Amount</th>
        <th>Target Date</th>
			</tr>
		</thead>
		<tbody>
      <% for (var goal of goals) { %>
      <tr>
        <td><a href="/goals/view/<%= goal._id %>"><%= goal.goal_name %></a></td>
        <td><%= goal.goal_target %></td>
        <td><%= goal.goal_length %></td>
      </tr>
      <% } %>
    </tbody>
  </table>
  <div class="float-right">
    <a href="/goals/add" class="cta float-right">Add Goal</a>
  </div>
</section>
<% } %>
  
<% include footer %>