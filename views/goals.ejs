			<div class="col-4">
			  <div class="goal-column">
  				<h5 class="goal-header center-align">Car Down Payment</h5>
  				<p>Total Needed: $10,000</p>
				  <p>Saved So Far: $2,500</p>
				  <p>Remaining to Reach Goal: $7,500</p>
				</div>
			</div>
			<div class="col-4">
			  <div class="goal-column">
  				<h5 class="goal-header center-align">Pay Off Student Loan</h5>
  				<p>Total Needed: $25,000</p>
				  <p>Saved So Far: $8,700</p>
				  <p>Remaining to Reach Goal: $16,300</p>
  				</h5>
				</div>
			</div>
			<div class="col-4">
			  <div class="goal-column">
  				<h5 class="goal-header center-align">
  				  <a href="" class="cta">Create Goal</a>
  				</h5>
  			</div>
			</div>
		</div>
		<div class="goal-box">
			<div class="row">
				<div class="col-4">
					<div class="center-align">
				    
					</div>
				</div>
				<div class="col-4">
					<div class="center-align">
					  
					</div>
				</div>
				<div class="col-4">
					<div class="center-align">
					  
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<% if (goals.length === 0) { %>
    <h1>There are currently no goals in the database</h1>
    <p><a href="/goals/add">Add a goal</a></p>
  <% } else { %>
  <section class="center" class="mainbody">
    <div class="topbar">
      <h4>
        Account: 
        <select>
          <option value="0000">0000</option>
					<option value="1234">1234</option>
					<option value="9999">9999</option>
        </select>
      </h4>
    </div>
    <table class="ledger-table">
      <thead>
  			<tr>
  				<th>Goal</th>
          <th>Target Amount</th>
          <th>Target Date</th>
  			</tr>
  		</thead>
  		<tbody>
        <% for (var goal of goals) { %>
        <tr>
          <td><a href="/goals/view/<%= goal._id %>"><%= goal.goal_name %></a></td>
          <td><%= goal.goal_target %></td>
          <td><%= goal.goal_length %></td>
        </tr>
        <% } %>
      </tbody>
    </table>
    <div class="float-right">
      <a href="/goals/add" class="cta float-right">Add Goal</a>
    </div>
  </section>
  <% } %>
  
<% include footer %>
