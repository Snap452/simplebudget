<% include header %>
<% if (transaction) { %>
<section class="center">
  <div class="topbar">
    <h2>Update Transaction</h2>
  </div>
</section>
<% } else { %>
<section class="center">
  <div class="topbar">
    <h2>Add Transaction</h2>
  </div>
</section>
<% } %>
<section class="center" class="mainbody">
	<div class="container-fluid">
		<div class="row">
			<div class="col-4">
			  <form role="form" action="/transactions/save" method="post">
			    <input <%- general_helper.FormValue(date_helper.FormatFormDate(transaction.date)) %> type="date" name="date" class="form-control mb-3" />
			    <input <%- general_helper.FormValue(transaction.desc) %> type="text" name="desc" placeholder="Description" class="form-control mb-3" />
			    <input <%- general_helper.FormValue(transaction.type) %> type="text" name="type" placeholder="Category" class="form-control mb-3" />
			    <input <%- general_helper.FormValue(transaction.amount) %> type="number" step="0.01" value="0.00" name="amount" placeholder="0.00" class="form-control mb-3" />
			    <input type="radio" name="amount-type" class="mr-2 mb-4" /><label for="amount-type" class="mr-4">Withdrawal</label>
			    <input type="radio" name="amount-type" class="mr-2 mb-4" /><label for="amount-type">Deposit</label>
			    <button type="submit" name="submit" class="cta mr-2"><%= (transaction) ? 'Update' : 'Add' %> Transaction</button>
          <a href="../"><button type="button" class="cta-grey">Cancel</button></a>
			  </form>
			</div>
		</div>
	</div>
</section>
<% include footer %>